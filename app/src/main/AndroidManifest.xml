<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dafian.android.submissionfootballclub">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".ui.StartUpActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity android:name=".ui.league.LeagueActivity">

            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http"
                      android:host="www.football.club.com"
                      android:pathPrefix="/league"/>
            </intent-filter>

        </activity>

        <activity android:name=".ui.schedule.ScheduleTabActivity"/>

        <activity android:name=".ui.schedule.detail.DetailScheduleActivity"
                  android:parentActivityName=".ui.schedule.ScheduleTabActivity">

            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.schedule.ScheduleTabActivity"/>

        </activity>

    </application>

</manifest>